<div class="container">
  <h1><%= @restaurant.name %></h1>
  <h2> <%= @restaurant.address %> </h2>
  <button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_restaurant_path(@restaurant) %></button>
  <button type="button" class="btn btn-primary"><%= link_to "Back to list", restaurants_path %></button>

<div class="formbox">
  <h3>Leave a comment</h3>
  <%= render "reviews/form",
           :review => @review, :restaurant => @restaurant %>

</div>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= "⭐️" * review.rating %> <%= review.content %>
      <button type="button" class="btn btn-primary"><%= link_to "Remove",
                    review_path(review),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></button>
    </li>

  <% end %>
</ul>
</div>
